			},
			"command": "docker-compose",
			"args": ["-f", "all-ext-services.yml", "stop"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"clear": true
			}
		},
		{
			"label": "InfluxDB Build",
			"type": "shell",
			"command": "docker",
			"args": ["run", "--name=influxdb", "-d", "-p", "8086:8086", "influxdb"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"clear": true
			}
		},
		{
			"label": "InfluxDB Init",
			"type": "shell",
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-e", "INFLUXDB_DB=streamsheets",
				"-e", "INFLUXDB_ADMIN_ENABLED=true",
				"-e", "INFLUXDB_ADMIN_USER=cedalo",
				"-e", "INFLUXDB_ADMIN_PASSWORD=influxisawesome",
				"-v", "$PWD:/var/lib/influxdb",
				"influxdb", "/init-influxdb.sh"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"clear": true
			}
		},
		{
			"label": "InfluxDB Start",
			"type": "shell",
			"command": "docker",
			"args": ["start", "influxdb"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"clear": true
			}
		},
		{
			"label": "InfluxDB Stop",
			"type": "shell",
			"command": "docker",
			"args": ["stop", "influxdb"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"clear": true
			}
		}
	]
